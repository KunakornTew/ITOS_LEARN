@model Person

<h2>Delete person data</h2>

<p>Are you sure you want to delete this person?</p>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <dl class="row">
        <dt class="col-sm-2">Birthday</dt>
        <dd class="col-sm-10">@Model.BirthDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Jobposition</dt>
        <dd class="col-sm-10">@Model.JobPosition</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Cancel</a>
</form>

